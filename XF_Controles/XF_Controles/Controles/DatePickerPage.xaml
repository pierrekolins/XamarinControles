<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF_Controles.Controles.DatePickerPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Margin="15" Text="DatePicker - Manipulador de Datas"/>
            <DatePicker
                x:Name="dtPicker"
                TextColor="Blue"
                Format="dd/MM/yyyy"
                MinimumDate="01/01/2019"
                MaximumDate="12/31/2020"
                Date="05/26/2019"
                DateSelected="ActionDateSelected"
                />
            <Label x:Name="lbResultado"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>