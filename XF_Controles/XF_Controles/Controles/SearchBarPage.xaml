<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF_Controles.Controles.SearchBarPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Margin="15" Text="SearchBar - Fornece uma caixa de pesquisa"/>
            <!-- TextChanged="Pesquisar" -->
            <SearchBar 
                
                CancelButtonColor="Red"
                Placeholder="Faça a pesquisa"
                PlaceholderColor="Azure"
                SearchButtonPressed="PesquisarButton"
                />
            <StackLayout
                x:Name="listResult">                
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>