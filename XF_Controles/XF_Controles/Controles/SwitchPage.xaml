<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF_Controles.Controles.SwitchPage">
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Label Text="Switch - fornece um valor alternado." />
            <Switch 
                IsToggled="True"
                
                Toggled="ActionToggledSwitch"
                />
            <Label x:Name="lbSwitch"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>