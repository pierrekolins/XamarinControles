<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF_Controles.Controles.TimePickerPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Margin="15" Text="TimePicker - Manipulação de tempo"/>
            <!-- Format U - Padrão Universal-->
            <TimePicker
                TextColor="Red"                 
                Format="U" 
                Time="12:30"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>